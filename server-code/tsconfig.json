{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["es2020"],
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,                           
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,                
    "moduleResolution": "node"               
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]       
}